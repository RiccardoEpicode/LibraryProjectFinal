<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinalVersion</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinalVersion.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
            <div class="container">

                <!-- LOGO / BRAND -->
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-controller="Home" asp-action="Index">
                    LibrarySystem
                </a>

                <!-- MOBILE MENU BUTTON -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- NAV LINKS -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto gap-2">

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Book" asp-action="Index">Books</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Author" asp-action="Index">Authors</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Loan" asp-action="AllLoans">Loans</a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main role="main" class="flex-fill">
        @RenderBody()
    </main>

    <!-- FOOTER ALWAYS AT BOTTOM -->
    <footer class="mt-auto bg-light text-center py-3 border-top">
        <p class="mb-0 text-muted">
            © @DateTime.Now.Year — Library Management System • Designed by Riccardo
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
